<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "${cfg.mapperPkg}#if(${cfg.mapperPkgSuffix}).$!{cfg.utils.getPkgFromUnderline($table.name,$cfg.rmpre)}#end.${cfg.utils.rmpreu($table,$cfg.rmpre)}Repo">
    <sql id = "columns">
        #foreach($field in ${table.fields})
        `${field.name}`#if($foreach.hasNext),#end #if(${field.keyFlag} && !$flyingKeyColumn)#set($flyingKeyColumn = ${field.name})#set($flyingKeyProperty = ${field.propertyName})#set($flyingKeyIsLast = $foreach.last)#end
        #end
    </sql>
    <sql id = "querySql">
        <where>
            #foreach($field in ${table.fields})
            #if(!$field.keyFlag)
            <if test = "@${cfg.ognl}@isNotEmpty(${field.propertyName})">
                AND `${field.name}` #if(${cfg.utils.isVarchar($field)})LIKE#else=#end #{${field.propertyName}, jdbcType=${cfg.utils.getMysqlJdbcType($field.type)}}
            </if>
            #if(${field.columnType.type} == 'Date')
            <if test = "@${cfg.ognl}@isNotEmpty(${field.propertyName}Start)">
                AND `${field.name}` &gt;= #{${field.propertyName}Start, jdbcType=${cfg.utils.getMysqlJdbcType($field.type)}}
            </if>
            <if test = "@${cfg.ognl}@isNotEmpty(${field.propertyName}End)">
                AND `${field.name}` &lt;= #{${field.propertyName}End, jdbcType=${cfg.utils.getMysqlJdbcType($field.type)}}
            </if>
            #end
            #end
            #end
        </where>
    </sql>
    <insert id = "save">
        INSERT INTO `${table.name}` (
        <include refid = "columns" />
        )
        VALUES (
        #foreach($field in ${table.fields})
        #{${field.propertyName}, jdbcType=${cfg.utils.getMysqlJdbcType($field.type)}}#if($foreach.hasNext),#end
        #end
        )
    </insert>
    <select id = "getById" resultType = "${cfg.pojoPkg}#if(${cfg.pojoPkgSuffix}).$!{cfg.utils.getPkgFromUnderline($table.name,$cfg.rmpre)}#end.${cfg.utils.rmpreu($table,$cfg.rmpre)}">
        SELECT
        <include refid = "columns" />
        FROM `${table.name}`
        WHERE
        `$flyingKeyColumn` = #{$flyingKeyProperty, jdbcType=VARCHAR}
    </select>
    <delete id = "removeById">
        DELETE FROM `${table.name}`
        WHERE
        `$flyingKeyColumn` = #{$flyingKeyProperty, jdbcType=VARCHAR}
    </delete>
    <delete id = "removeByIds">
        DELETE FROM `${table.name}`
        WHERE
        `$flyingKeyColumn` IN
        <foreach collection = "ids" item = "id" open = "(" close = ")" separator = ",">
            #{id, jdbcType=VARCHAR}
        </foreach>
    </delete>
    <update id = "update">
        UPDATE `${table.name}`
        SET
        #foreach($field in ${table.fields})
        #if(!$field.keyFlag)
        `${field.name}` = #{${field.propertyName}, jdbcType=${cfg.utils.getMysqlJdbcType($field.type)}}#if((!$flyingKeyIsLast && $foreach.hasNext) || ($flyingKeyIsLast && ${table.fields.size()} - 1 != $foreach.count)),#end
        #end
        #end
        WHERE `$flyingKeyColumn` = #{$flyingKeyProperty, jdbcType=VARCHAR}
    </update>
    <update id = "updateDynamically">
        UPDATE `${table.name}`
        <set>
            #foreach($field in ${table.fields})
            #if(!$field.keyFlag)
            <if test = "@${cfg.ognl}@isNotEmpty(bean.${field.propertyName}) or empF.contains('${field.propertyName}')">
                `${field.name}` = #{bean.${field.propertyName}, jdbcType=${cfg.utils.getMysqlJdbcType($field.type)}}#if((!$flyingKeyIsLast && $foreach.hasNext) || ($flyingKeyIsLast && ${table.fields.size()} - 1 != $foreach.count)),#end
            </if>
            #end
            #end
        </set>
        WHERE `$flyingKeyColumn` = #{bean.$flyingKeyProperty, jdbcType=VARCHAR}
    </update>
    <select id = "getDynamically" resultType = "${cfg.pojoPkg}#if(${cfg.pojoPkgSuffix}).$!{cfg.utils.getPkgFromUnderline($table.name,$cfg.rmpre)}#end.${cfg.utils.rmpreu($table,$cfg.rmpre)}">
        SELECT
        <include refid = "columns" />
        FROM `${table.name}`
        <include refid = "querySql" />
    </select>
    <select id = "countDynamically" resultType = "java.lang.Integer">
        SELECT COUNT(`$flyingKeyColumn`) FROM `${table.name}`
        <include refid = "querySql" />
    </select>
</mapper>